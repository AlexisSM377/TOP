---
import Top from "@/components/top.astro";
import GitHub from "@/Icons/GitHub.astro";
import Spotify from "@/Icons/Spotify.astro";

const NAV_ITEMS = [
  { Icon: Spotify, href: "#" },
  { Icon: GitHub, href: "https://github.com/AlexisSM377/TOP" },
];
---

<header
  class="header-animate backdrop-blur-[10px] md:backdrop-blur-0 w-full overflow-hidden z-[99999] py-6 bg-black bg-opacity-50"
>
  <div
    class="grid items-center justify-center md:justify-between w-full grid-cols-[auto_1fr] mx-auto gap-x-10 md:flex max-w-6xl"
  >
    <a
      href="/"
      class="ml-4 transition-transform duration-300 hover:scale-125"
      title="Ir a la página principal"
      aria-label="Ir a la página principal"
    >
      <Top />
    </a>
    <nav
      class="col-span-full overflow-x-auto row-[2/3] grid md:block grid-rows-[5fr] transition-[grid-template-rows]"
    >
      <ul
        class="flex flex-col items-center overflow-x-auto overflow-y-hidden md:overflow-hidden md:flex-row"
      >
        {
          NAV_ITEMS.map(({ href, Icon }, index) => (
            <li class="flex justify-center w-full first:mt-5 md:first:mt-0 md:block md:w-auto">
              <a
                href={href}
                class="flex items-center justify-center w-full gap-1 px-5 py-4 text-xl duration-300 md:w-auto md:py-2 md:text-base hover:scale-110"
              >
                <Icon />
              </a>
            </li>
          ))
        }
      </ul>
    </nav>
  </div>
</header>

<style>
  .header-animate {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    animation: reduce-header linear both;
    animation-timeline: scroll();
    animation-range: 0 150px;
  }
</style>
